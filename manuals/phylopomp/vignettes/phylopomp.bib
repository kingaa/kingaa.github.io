@Article{Yebra2015,
  author    = {Yebra, Gonzalo and Ragonnet-Cronin, Manon and Ssemwanga, Deogratius and Parry, Chris M. and Logue, Christopher H. and Cane, Patricia A. and Kaleebu, Pontiano and Leigh-Brown, Andrew J.},
  journal   = {The Journal of general virology},
